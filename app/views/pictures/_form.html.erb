<%= form_for(@picture, url: choose_new_or_edit) do |f| %>
  <% if @picture.errors.any? %>
    <div id="error_explanation">
      <h2><%= @picture.errors.count %>件のエラーがあります。</h2>

      <ul>
      <% @picture.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if @picture.file? %>
    <%= image_tag(@picture.file_url, :width => "400") %>
  <% end %>
  <br>
  <%= f.label :写真 %>
  <%= f.file_field :file, class: 'form-control' %>
  <%= f.hidden_field :file_cache %>
  <br>
  <%= f.label :キャプション %>
  <%= f.text_field :caption, class: 'form-control' %>
  <br>
  <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>
<div style="text-align:center;">
<%= link_to "一覧画面にもどる", pictures_path %>
</div>
