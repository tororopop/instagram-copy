  <div style="background-color:#fff; border:#DCDCDC 1px solid;border-radius: 4px;">

    <%= alert %>

     <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <h3 style="text-align:center;">プロフィールを編集</h3>

      <div class="field" style="display: inline-block;">
        <%= profile_img(@user) if profile_img(@user) %>

          <div class="field" style="display: inline-block; padding-left:100px;">
            <a href="/users/sign_out" data-method="delete"><img src="<%= asset_path "logout.png" %>" width="100px">ログアウト</a>
          </div>

        <%= f.file_field :avatar %>
        <%= f.hidden_field :avatar_cache %>
      </div>

      <div class="field">
        <%= f.label :ニックネーム %><br />
        <%= f.text_field :name, class: "form-control" %>
      </div>
<br>
      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
<br>
      <% if @user.provider.blank? %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
          <div class="field">
            <%= f.label :current_password %><br />
            <%= f.password_field :current_password, class: "form-control" , autocomplete: "off" %>
          </div>
          <br>
          <div class="field">
            <%= f.label :新しいパスワード %><br />
            <%= f.password_field :password, class: "form-control" , autocomplete: "off" %>
          </div>
          <br>
          <div class="field">
            <%= f.label :新しいパスワード（確認用） %><br />
            <%= f.password_field :password_confirmation, class: "form-control" , autocomplete: "off" %>
          </div>
      <% end %>
<br>

      <div class="actions">
        <%= f.submit "プロフィールを更新する", class: "btn btn-primary btn-block btn-success" %>
      </div>
      <% end %>
<br>
      <p><%= button_to "ユーザーアカウントを削除する", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-primary btn-block btn-danger"  %></p>

    <div style="text-align:center;">
    <%= link_to "一覧画面にもどる", pictures_path %>
    </div>
  </div>
